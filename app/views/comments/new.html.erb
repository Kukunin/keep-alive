<h1 class="mb-2">Нове повідомлення</h1>

<%= turbo_frame_tag("new_comment", target: "_top") do %>
  <%= form_with(model: [@comment.request, @comment],
                data: { controller: 'reset-form', action: 'turbo:submit-end->reset-form#reset'}) do |f| %>
    <div class="grid grid-cols-1 gap-2">
      <div>
        <%= f.label :username, class: 'text-gray-700' %>
        <%= f.text_field :username, required: true, maxlength: 100, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' %>
      </div>
      <div>
        <%= f.label :message, class: 'text-gray-700' %>
        <%= f.text_area :message, rows: 2, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50' %>
      </div>
      <div>
        <%= f.submit class: 'inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 disabled:opacity-50' %>
      </div>
    </div>
  <% end %>
<% end %>
