<div id="<%= dom_id request %>">
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6 flex items-center text-gray-400">
      <a href="/" class="text-gray-400 hover:text-gray-500">
        <!-- Heroicon name: solid/home -->
        <svg class="flex-shrink-0 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
        </svg>
        <span class="sr-only">Home</span>
      </a>

      <!-- Heroicon name: solid/chevron-right -->
      <svg class="flex-shrink-0 h-5 w-5 " xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
      </svg>

      <h3 class="text-lg leading-6 font-medium text-gray-600">
        <%= Request.model_name.human %>
      </h3>
    </div>
    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <dl class="grid grid-cols-1 gap-x-2 gap-y-8 sm:grid-cols-2">
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">
            <%= Request.human_attribute_name(:city) %>
          </dt>
          <dd class="mt-1 text-sm text-gray-900">
            <p>
              <%= [request.city, "#{request.region} #{t('common.region')}"].join(', ') %>
            </p>
            <% if request.address.present? %>
              <p><%= request.address %></p>
            <% end %>
          </dd>
        </div>
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">
            <%= Request.human_attribute_name(:contact_name) %>
          </dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= request.contact_name.presence || "â€”" %>
          </dd>
        </div>
        <div class="sm:col-span-2">
          <dt class="text-sm font-medium text-gray-500">
            <%= Request.human_attribute_name(:title) %>
          </dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= request.title %>
          </dd>
        </div>
        <div class="sm:col-span-2">
          <dt class="text-sm font-medium text-gray-500">
            <%= Request.human_attribute_name(:description) %>
          </dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= request.description %>
          </dd>
        </div>
        <div class="sm:col-span-2">
          <dt class="text-sm font-medium text-gray-500"><%= t('common.contacts') %></dt>
          <dd class="mt-1 text-sm text-gray-900">
            <ul role="list" class="list-disc list-inside text-sm">
              <% if request.phone.present? %>
                <li class="px-3 py-1">
                  <span title="<%= Request.human_attribute_name(:phone) %>">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 inline-block" fill="none" viewBox="0 0 24 24" stroke="currentColor" >
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                  </span>
                  <%= request.phone %>
                </li>
              <% end %>
              <% if request.viber.present? && request.phone.present? %>
                <li class="px-3 py-1">
                  <span title="<%= Request.human_attribute_name(:viber) %>">
                    <img class="w-6 h-6 inline-block" src="https://img.icons8.com/color/48/000000/viber.png"/>
                  </span>
                  <%= request.phone %>
                </li>
              <% end %>
              <% if request.telegram.present? %>
                <li class="px-3 py-1">
                  <span title="<%= Request.human_attribute_name(:telegram) %>">
                    <img class="w-6 h-6 inline-block" src="https://img.icons8.com/fluency/48/000000/telegram-app.png"/>
                  </span>
                  <%= request.telegram %>
                </li>
              <% end %>
              <% if request.skype.present? %>
                <li class="px-3 py-1">
                  <span title="<%= Request.human_attribute_name(:skype) %>">
                    <img class="w-6 h-6 inline-block" src="https://img.icons8.com/color/48/000000/skype--v1.png"/>
                  </span>
                  <%= request.skype %>
                </li>
              <% end %>
            </ul>
          </dd>
        </div>
      </dl>
    </div>
  </div>
</div>
