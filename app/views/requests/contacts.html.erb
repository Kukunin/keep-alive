<%= turbo_frame_tag "contacts" do %>
  <dt class="text-sm font-medium text-gray-500"><%= t('common.contacts') %></dt>
  <dd class="mt-1 text-sm text-gray-900">
    <ul role="list" class="m-0 text-sm">
      <% if @request.address.present? %>
        <li class="flex space-x-2">
          <span title="<%= Request.human_attribute_name(:address) %>">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 inline-block opacity-80" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
            </svg>
          </span>
          <%= protect_sensitive(@request.address) %>
        </li>
      <% end %>
      <% if @request.phone.present? %>
        <li class="flex space-x-2">
          <span title="<%= Request.human_attribute_name(:phone) %>">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 inline-block" fill="none" viewBox="0 0 24 24" stroke="currentColor" >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </span>
          <%= protect_sensitive(@request.phone) %>
        </li>
      <% end %>
      <% if @request.viber? && @request.phone.present? %>
        <li class="flex space-x-2">
          <span title="<%= Request.human_attribute_name(:viber) %>">
            <img class="w-6 h-6 inline-block" src="https://img.icons8.com/color/48/000000/viber.png"/>
          </span>
          <%= protect_sensitive(@request.phone) %>
        </li>
      <% end %>
      <% if @request.telegram.present? %>
        <li class="flex space-x-2">
          <span title="<%= Request.human_attribute_name(:telegram) %>">
            <img class="w-6 h-6 inline-block opacity-80" src="/icons/telegram-desktop.svg"/>
          </span>
          <%= link_to @request.telegram, telegram_link(@request.telegram), target: "_blank", rel: "nofollow" %>
        </li>
      <% end %>
      <% if @request.instagram.present? %>
        <li class="flex space-x-2">
          <span title="<%= Request.human_attribute_name(:instagram) %>">
            <img class="w-6 h-6 inline-block" src="https://img.icons8.com/material-outlined/48/000000/instagram-new--v1.png" alt="Instagram" />
          </span>
          <%= link_to @request.instagram, instagram_link(@request.instagram), target: "_blank", rel: "nofollow" %>
        </li>
      <% end %>
      <% if @request.skype.present? %>
        <li class="flex space-x-2">
          <span title="<%= Request.human_attribute_name(:skype) %>">
            <img class="w-6 h-6 inline-block" src="https://img.icons8.com/color/48/000000/skype--v1.png"/>
          </span>
          <%= link_to @request.skype, skype_link(@request.skype), target: "_blank", rel: "nofollow" %>
        </li>
      <% end %>
    </ul>
  </dd>
<% end %>
