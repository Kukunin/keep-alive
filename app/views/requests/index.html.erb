<div class="flex justify-between mb-4">
  <h1><%= Request.model_name.human(count: 2) %></h1>

  <%= link_to t('requests.create_new'), new_request_path, class: 'inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
</div>

<div class="flex flex-col">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <%= Request.human_attribute_name("region") %>
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <%= Request.human_attribute_name("city") %>
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <%= Request.human_attribute_name("address") %>
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <%= Request.human_attribute_name("created_at") %>
              </th>
              <th scope="col" class="relative px-6 py-3">
                <span class="sr-only"><%= t('common.details') %></span>
              </th>
            </tr>
          </thead>
          <tbody>
            <% @requests.each_with_index do |request, i| %>
              <%= content_tag :tr, id: dom_id(request), class: "#{dom_class(request)} #{(i % 2).zero? ? 'bg-white' : 'bg-gray-50'}" do %>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= request.region %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= request.city %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= request.address %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <time datetime="<%= request.created_at.iso8601 %>">
                    <%= time_ago_in_words(request.created_at) %> <%= t('common.ago') %>
                  </time>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%= link_to t('common.details'), request, class: 'text-indigo-600 hover:text-indigo-900' %>
                </td>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
