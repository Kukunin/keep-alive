<% if record.errors.any? %>
  <div class="rounded-md bg-red-50 p-4 mt-2 mb-6">
    <div class="flex">
      <div class="flex-shrink-0">
        <%= heroicon 'exclamation', variant: :solid, options: { class: 'h-5 w-5 mt-1 text-red-400' } %>
      </div>
      <div class="ml-3">
        <h3 class="font-medium text-red-800">
          <%= t('common.form_error') %>:
        </h3>
        <div class="mt-2 text-red-700">
          <ul>
            <% record.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>
